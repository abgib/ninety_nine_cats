<form action="<%= cats_url %>" method="post">
    <label for-"cat_name">Name</label>
    <input type="text" name="cat[name]" value="<%=@cat.name%>">
    <br><br>

    <label for-"cat_sex">Sex</label><br>
    <input type="radio" name="cat[sex]" id="cat_sex_female"
      value="f" checked="<%=@cat.sex%>">
    <label for-"cat_sex_female">Female</label><br>
    <input type="radio" name="cat[sex]" id="cat_sex_male"
      value="m">
    <label for-"cat_sex_male">Male</label><br><br>

    <label for-"cat_color">Color</label>
    <select name="cat[color]" id="cat_color"
      selected="<%=@cat.color%>">
      <option value=""></option>
      <option value="brown">Brown</option>
      <option value="black">Black</option>
      <option value="white">White</option>
    </select><br><br>

    <label for-"cat_birth_date">Birthday</label>
    <time>
      <input type="date" name="cat[birth_date]"
        value="<%=@cat.birth_date%>">
    </time><br><br>

    <label for-"cat_description">Description</label><br>

      <textarea name="cat[description]" id="<%=@cat.description%>"
        cols="30" rows="10"></textarea>
    <br><br>

    <button>Create Cat</button>
</form>
